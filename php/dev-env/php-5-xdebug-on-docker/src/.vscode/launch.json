{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Listen for Xdebug",
      "type": "php",
      "request": "launch",
      "port": 9000
    },
    {
      "name": "Launch currently open script",
      "type": "php",
      "request": "launch",
      "program": "${file}",
      "cwd": "${fileDirname}",
      "port": 9000,
      "runtimeArgs": [
        // 로컬에서 실행 시 히트되도록
        "-dxdebug.remote_host=localhost"
      ]
    }
  ]
}
